{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 570,
  "height": 480,
  "background": "skyblue",
  "autosize": {"type": "fit", "contains": "padding"},
  "projection": {
    "type": "mercator",
    "center": [98, 10],
    "scale": 200
  },
  "params": [
    {
      "name": "stage_select",
      "value": "All",
      "bind": {
        "input": "select",
        "options": ["All", "Not Qualified","Group Stage","Round of 16","Quarter-finals","Semi-finals","Runner-up","Winner"],
        "name": "Select Stage: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/suna019/3179/main/data/Map.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/suna019/3179/main/data/Stage%20reached%20per%20team.csv"
            },
            "key": "Team",
            "fields": ["Status"]
          }
        },
        {
          "calculate": "datum.Status ? datum.Status : 'Not Qualified'",
          "as": "Team Performance"
        }
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "Team Performance",
          "type": "nominal",
          "scale": {
            "domain": ["Not Qualified","Group Stage","Round of 16","Quarter-finals","Semi-finals","Runner-up","Winner"],
            "range": ["grey","red","orange","lightgreen","saddlebrown","silver","yellow"]
          },
          "legend": {
            "title": "Stage Reached",
            "orient": "bottom",
            "offset": 1
          }
        },
        "stroke": {
          "condition": {
            "test": "stage_select != 'All' && datum['Team Performance'] == stage_select",
            "value": "black"
          },
          "value": "black"
        },
        "strokeWidth": {
          "condition": {
            "test": "stage_select != 'All' && datum['Team Performance'] == stage_select",
            "value": 2
          },
          "value": 0.5
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Team Performance", "type": "nominal", "title": "Stage Reached"}
        ]
      }
    },
    {
      "data": {"graticule": true},
      "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.5, "fill": null}
    }
  ]
}

{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "width": 500,
  "height": 400,
  "description": "Stacked bar plot of total goals + assists by age group, aggregated by position with correct stack order",
  "data": {
    "url": "https://raw.githubusercontent.com/suna019/3179/main/data/player_stacked_bar_chart.csv"
  },
  "transform": [
    {
      "aggregate": [
        {"op": "sum", "field": "game_impact", "as": "total_game_impact"}
      ],
      "groupby": ["age_group", "position"]
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "age_group",
      "type": "ordinal",
      "title": "Age Group",
      "sort": "ascending"
    },
    "y": {
      "field": "total_game_impact",
      "type": "quantitative",
      "title": "Total Goals + Assists"
    },
    "color": {
      "field": "position",
      "type": "ordinal",
      "title": "Position",
      "scale": {
        "domain": ["Goalkeeper", "Defender", "Midfielder", "Forward"],
        "range": ["blue", "green", "goldenrod", "crimson"]
      }
    },
    "tooltip": [
      {"field": "age_group", "type": "ordinal", "title": "Age Group"},
      {"field": "position", "type": "ordinal", "title": "Position"},
      {"field": "total_game_impact", "type": "quantitative", "title": "Total Goals + Assists"}
    ]
  }
}
